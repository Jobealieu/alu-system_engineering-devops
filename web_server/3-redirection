#!/usr/bin/env bash
# Configures Nginx to redirect /redirect_me to another page with a 301

# Install nginx
apt-get update
apt-get install -y nginx

# Create custom index page
echo "Holberton School" > /var/www/html/index.html

# Configure the redirect in the default site configuration
sed -i '/server_name _;/a \\n\tlocation /redirect_me {\n\t\treturn 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;\n\t}' /etc/nginx/sites-available/default

# Restart nginx without using systemctl
service nginx restart
