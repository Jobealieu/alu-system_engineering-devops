#!/usr/bin/env bash
# Configures Nginx to redirect /redirect_me to another page with a 301 status

# Update package list and install nginx
apt-get update
apt-get install -y nginx

# Create the default page
echo "Holberton School" > /var/www/html/index.html

# Configure the redirect in the default Nginx configuration
sed -i '/server_name _;/a \    location /redirect_me {\n        return 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;\n    }' /etc/nginx/sites-available/default

# Restart nginx without using systemctl
service nginx restart

