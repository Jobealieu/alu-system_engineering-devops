#!/usr/bin/env bash
# Configures Nginx to redirect /redirect_me to another page with a 301 status

# Update and install nginx
apt-get update -y
apt-get install -y nginx

# Ensure nginx is stopped before configuration
service nginx stop

# Configure the redirect in default site
sed -i '/server_name _;/a \    location /redirect_me {\n        return 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;\n    }' /etc/nginx/sites-available/default

# Ensure index page exists
echo "Holberton School" > /var/www/html/index.html

# Test configuration
nginx -t

# Start nginx
service nginx start

# Wait for nginx to fully start
sleep 2
