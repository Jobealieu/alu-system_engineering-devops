#!/usr/bin/env bash
# Configure Nginx server with a 301 redirect from /redirect_me

# Update package list and install Nginx
apt-get update -y
apt-get install nginx -y

# Create a custom index page
echo "Hello World!" > /var/www/html/index.html

# Configure the redirect in the Nginx default site
# Add the redirect location block before the existing location / block
sed -i '/server_name _;/a \\n\tlocation /redirect_me {\n\t\treturn 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;\n\t}' /etc/nginx/sites-available/default

# Start or restart Nginx service
service nginx restart
