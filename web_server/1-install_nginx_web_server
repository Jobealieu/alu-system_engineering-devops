#!/usr/bin/env bash
# Configures a new Ubuntu machine to install and configure Nginx

# Update package list
apt-get update -y

# Install nginx
apt-get install nginx -y

# Create the content with "Holberton School"
echo "Holberton School for the win!" | tee /var/www/html/index.html /var/www/html/index.nginx-debian.html > /dev/null

# Configure Nginx default site to ensure it's listening on port 80
cat > /etc/nginx/sites-available/default <<'EOF'
server {
    listen 80 default_server;
    listen [::]:80 default_server;

    root /var/www/html;
    index index.html index.htm index.nginx-debian.html;

    server_name _;

    location / {
        try_files $uri $uri/ =404;
    }
}
EOF

# Ensure the site is enabled
ln -sf /etc/nginx/sites-available/default /etc/nginx/sites-enabled/default

# Remove default nginx page if exists
rm -f /var/www/html/index.nginx-debian.html

# Test nginx configuration
nginx -t

# Kill any existing nginx processes
pkill nginx || true

# Start nginx
service nginx start
