#!/usr/bin/env bash
# Configures a new Ubuntu machine to install and configure Nginx

# Update package list
apt-get update -y

# Install nginx
apt-get install nginx -y

# Allow Nginx through firewall if ufw is active
ufw allow 'Nginx HTTP' 2>/dev/null || true

# Create a simple HTML page with "Holberton School"
echo "Holberton School for the win!" > /var/www/html/index.html

# Remove default index.nginx-debian.html if it exists
rm -f /var/www/html/index.nginx-debian.html

# Ensure Nginx is enabled and started
service nginx start

# Restart Nginx to apply changes (without using systemctl)
service nginx restart
