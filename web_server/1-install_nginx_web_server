#!/usr/bin/env bash
# Install and configure Nginx web server on Ubuntu

# Update package list
apt-get update -y

# Install Nginx
apt-get install nginx -y

# Create custom index page with required content
echo "Holberton School for the win!" > /var/www/html/index.html

# Ensure Nginx is listening on port 80 (default configuration)
# Start Nginx service using service command (not systemctl)
service nginx start
