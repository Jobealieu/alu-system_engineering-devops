#!/usr/bin/env bash
# Install and configure Nginx

# Update package list and install Nginx
apt-get update
apt-get install -y nginx

# Stop Nginx service
service nginx stop

# Create a simple HTML page that displays "1"
echo "1" > /var/www/html/index.html

# Configure Nginx to listen on port 80 (default config should work)
# Ensure the default site is enabled
if [ ! -L /etc/nginx/sites-enabled/default ]; then
    ln -s /etc/nginx/sites-available/default /etc/nginx/sites-enabled/default
fi

# The service command should now show nginx is not running
# Test: service nginx status
