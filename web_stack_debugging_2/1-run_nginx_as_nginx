#!/usr/bin/env bash
# Configure Nginx to run as nginx user on port 8080

# Create nginx user if it doesn't exist
id nginx &>/dev/null || useradd -r -s /bin/false nginx

# Kill any existing nginx processes
killall nginx 2>/dev/null
sleep 1

# Update nginx configuration
sed -i 's/user www-data;/user nginx;/g' /etc/nginx/nginx.conf
sed -i 's/listen 80 default_server;/listen 8080 default_server;/g' /etc/nginx/sites-enabled/default
sed -i 's/listen \[::\]:80 default_server ipv6only=on;/listen [::]:8080 default_server ipv6only=on;/g' /etc/nginx/sites-enabled/default

# Set permissions
chmod 644 /etc/nginx/nginx.conf
mkdir -p /var/lib/nginx/{body,proxy,fastcgi,uwsgi,scgi}
chown -R nginx:nginx /var/log/nginx /var/lib/nginx

# Start nginx
/usr/sbin/nginx
