#!/usr/bin/env bash
# Configure Nginx to run as nginx user and listen on port 8080

# Kill any running apache2 or nginx processes
pkill apache2
pkill nginx

# Update nginx.conf to run as nginx user (uncomment or add the user directive)
sed -i 's/^user .*/user nginx;/' /etc/nginx/nginx.conf
sed -i 's/^#user/user/' /etc/nginx/nginx.conf

# Update default site to listen on port 8080
sed -i 's/listen 80 default_server;/listen 8080 default_server;/' /etc/nginx/sites-enabled/default
sed -i 's/listen \[::\]:80 default_server;/listen [::]:8080 default_server;/' /etc/nginx/sites-enabled/default

# Fix permissions for nginx user
chmod 755 /etc/nginx/nginx.conf
chown -R nginx:nginx /var/log/nginx /var/lib/nginx

# Start nginx properly
su -s /bin/bash -c '/usr/sbin/nginx' nginx
